
@{
    ViewBag.Title = "Index";
}
<div class="cl pd-5 bg-1 bk-gray">
    <span class="l">
        <a href="javascript:;" onclick="data_dels()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a>
    </span>
    <span class="r">共有数据：<strong>{$pageInfo:totalRows}</strong> 条</span>
</div>

<table class="table table-border table-bordered table-hover table-bg table-sort dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
    <thead>

        <tr class="text-c" role="row">
            <th width="25">
                <input type="checkbox" value="">
            </th>
            <th width="150">管理员名称</th>
            <th width="150">登录时间</th>
            <th width="150">登录IP</th>
            <th>登录地址</th>
            <th width="80" style="width: 80px;">操作</th>
        </tr>
    </thead>
    <tbody>
        <volist name='pageInfo:data' id='item'>
            <tr class="text-c odd" role="row">
                <td><input type="checkbox" value="{$item.id}"></td>
                <td>{$item.name}</td>
                <td>{$item.created|date='Y-m-d H:i:s',###}</td>
                <td>{$item.ip}</td>
                <td>{$item.ip_address|default='无'}</td>
                <td class="f-14">
                    <a title="删除" href="javascript:;" onclick="self_del('{$item.id}')" class="ml-5">
                        <i class="Hui-iconfont">&#xe6e2;</i>
                    </a>
                </td>
            </tr>
        </volist>
    </tbody>
</table>
<div class='paging_simple_numbers'>
    <php>
        echo $pageInfo->show();
    </php>
</div>
